	<Script file="ImproveDressingRoom.lua"/>

	<Frame name="ImproveDressingRoomFrame" parent="DressUpFrame" enableMouse="true" hidden="false" movable="false">
		<Size>
			<AbsDimension x="316" y="332"/>
		</Size>
		<Anchors>
			<Anchor point="BOTTOM" relativeTo="$parent" relativePoint="BOTTOM">
				<Offset>
					<AbsDimension x="-11" y="104"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Scripts> 
			<OnLoad> 
				this:SetFrameLevel(DressUpFrame:GetFrameLevel() + 1);
				ImproveDressingRoomModel_OnLoad();
			</OnLoad> 
			<OnShow>
				DressUpModelRotateRightButton:Hide();
				DressUpModelRotateLeftButton:Hide();
				DressUpModel:SetHeight(332);
				DressUpModel:SetPoint("BOTTOM", "DressUpFrame", "BOTTOM", -11, 104);
			</OnShow>
			<OnMouseDown>
				ImproveDressingRoom_Move_OnMouseDown(arg1);
			</OnMouseDown>
			<OnMouseUp>
				ImproveDressingRoom_Move_OnMouseUp(arg1, "ImproveDressingRoomFrame");
			</OnMouseUp>
			<OnUpdate>
				ImproveDressingRoom_Move_OnUpdate(arg1, "ImproveDressingRoomFrame");
			</OnUpdate>
			<OnMouseWheel>
				ImproveDressingRoom_Move_OnMouseWheel(arg1, "ImproveDressingRoomFrame");
			</OnMouseWheel>
		</Scripts>
	</Frame>
	
