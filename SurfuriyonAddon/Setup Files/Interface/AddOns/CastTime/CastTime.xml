<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/
..\FrameXML\UI.xsd">
	<Script file="localization.lua"/>
	<Script	file="CastTimeGUI.lua"/>
	<Script	file="CastTime.lua"/>

	<Frame name="CastTimeFrame" frameStrata="DIALOG" enableMouse="false" parent="UIParent">
		<Size>
			<AbsDimension x="50" y="50"/>
		</Size>
		<Anchors>
			<Anchor	point="RIGHT" relativeTo="CastingBarFrame">
				<Offset>
					<AbsDimension x="0" y="17"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Layers>
			<Layer level="ARTWORK">
				<FontString name="CastTimeText" font="Fonts\ARIALN.TTF" outline="NORMAL">
					<FontHeight>
						<AbsValue val="14"/>
					</FontHeight>
					<Color r="1.0" g="1.0" b="1.0"/>
					<Anchors>
						<Anchor	point="RIGHT"/>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				CastTime_OnLoad();
			</OnLoad>
			<OnEvent>
				CastTime_OnEvent();
			</OnEvent>
			<OnUpdate>
				CastTime_OnUpdate();
			</OnUpdate>
		</Scripts>
	</Frame>
	<Frame name="CastTimeMF" frameStrata="HIGH" hidden="false" movable="true">
		<Size>
			<AbsDimension x="80" y="32"/>
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="CastingBarFrame">
				<Offset>
					<AbsDimension x="50" y="-50"/>
				</Offset>
			</Anchor>
		</Anchors>
		<Backdrop bgFile="Interface\Tooltips\UI-Tooltip-Background" edgeFile="Interface\Tooltips\UI-Tooltip-Border" tile="true">
			<EdgeSize>
				<AbsValue val="16"/>
			</EdgeSize>
			<TileSize>
				<AbsValue val="16"/>
			</TileSize>
			<BackgroundInsets>
				<AbsInset left="5" right="5" top="5" bottom="5"/>
			</BackgroundInsets>
		</Backdrop>
		<Layers>
			<Layer level="OVERLAY">
				<FontString name="$parentText" justifyH="CENTER" justifyV="CENTER" hidden="false" font="Fonts\ARIALN.TTF" outline="NORMAL">
					<FontHeight>
						<AbsValue val="12"/>
					</FontHeight>
					<Color r="1.0" g="1.0" b="1.0"/>
					<Size>
						<AbsDimension x="66" y="16"/>
					</Size>
					<Anchors>
						<Anchor point="TOPLEFT" relativePoint="TOPLEFT">
							<Offset>
								<AbsDimension x="7" y="-7"/>
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnLoad>
				this:SetBackdropColor(0, 0.1, 0.9, 0.5);
				this:SetBackdropBorderColor(0, 0.6, 0.8, 0.8);
				this:RegisterEvent("VARIABLES_LOADED");
				this:RegisterEvent("ADDON_LOADED");
			</OnLoad>
			<OnEvent>
				if (CastTime_OnVLoad) then
					CastTime_OnVLoad();
				end
			</OnEvent>
			<OnEnter>
				CastTime_OnEnter();
			</OnEnter>
			<OnLeave>
				GameTooltip:Hide();
			</OnLeave>
			<OnMouseDown>
				if ( arg1 == "LeftButton" and CastTime.flock == 0) then
					this:StartMoving();
				end
			</OnMouseDown>
			<OnMouseUp>
				if ( arg1 == "LeftButton" ) then
					this:StopMovingOrSizing();
				end
			</OnMouseUp>
		</Scripts>
	</Frame>
</Ui>