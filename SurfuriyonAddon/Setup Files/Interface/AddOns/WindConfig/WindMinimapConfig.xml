<Ui xmlns="http://www.blizzard.com/wow/ui/"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
	<Script file="WindMinimapConfig.lua"/>

	<Frame name="WindMinimapConfig" inherits="WindBorder" parent="UIParent">
		<Size>
			<AbsDimension x="410" y="280" />
		</Size>
		<Anchors>
			<Anchor point="TOPLEFT" relativeTo="WindConfig" relativePoint="TOPRIGHT">
				<Offset>
					<AbsDimension x="0" y="0" />
				</Offset>
			</Anchor>
		</Anchors>
		<Frames>

			<Frame name="WindMinimapConfigBody" inherits="WindLocation" hidden="false">
				<Size>
					<AbsDimension x="50" y="20" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="10" y="-10" />
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer>
						<FontString inherits="WindFontString" text="지도" justifyH="LEFT" hidden="false"/>
					</Layer>
				</Layers>
			</Frame>

			<Frame name="WindMinimapConfigTracking" inherits="WindLocation" hidden="false">
				<Size>
					<AbsDimension x="50" y="20" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="WindMinimapConfigBody" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-45"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer>
						<FontString inherits="WindFontString" text="추적" justifyH="LEFT" hidden="false"/>
					</Layer>
				</Layers>
			</Frame>
			<Frame name="WindMinimapConfigMail" inherits="WindLocation" hidden="false">
				<Size>
					<AbsDimension x="30" y="20" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="WindMinimapConfigTracking" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="160" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer>
						<FontString inherits="WindFontString" text="편지" justifyH="LEFT" hidden="false"/>
					</Layer>
				</Layers>
			</Frame>

			<Frame name="WindMinimapConfigMeetingStone" inherits="WindLocation" hidden="false">
				<Size>
					<AbsDimension x="50" y="20" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="WindMinimapConfigTracking" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-45"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer>
						<FontString inherits="WindFontString" text="만남의돌" justifyH="LEFT" hidden="false"/>
					</Layer>
				</Layers>
			</Frame>
			<Frame name="WindMinimapConfigBattlefield" inherits="WindLocation" hidden="false">
				<Size>
					<AbsDimension x="30" y="20" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="WindMinimapConfigMeetingStone" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="160" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer>
						<FontString inherits="WindFontString" text="전장" justifyH="LEFT" hidden="false"/>
					</Layer>
				</Layers>
			</Frame>

			<Frame name="WindMinimapConfigItem" inherits="WindLocation" hidden="true">
				<Size>
					<AbsDimension x="50" y="20" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="WindMinimapConfigMeetingStone" relativePoint="BOTTOMLEFT">
						<Offset>
							<AbsDimension x="0" y="-45"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer>
						<FontString inherits="WindFontString" text="아이템" justifyH="LEFT" hidden="false"/>
					</Layer>
				</Layers>
			</Frame>
			<Frame name="WindMinimapConfigZone" inherits="WindLocation" hidden="true">
				<Size>
					<AbsDimension x="30" y="20" />
				</Size>
				<Anchors>
					<Anchor point="TOPLEFT" relativeTo="WindMinimapConfigItem" relativePoint="TOPRIGHT">
						<Offset>
							<AbsDimension x="160" y="0"/>
						</Offset>
					</Anchor>
				</Anchors>
				<Layers>
					<Layer>
						<FontString inherits="WindFontString" text="인던" justifyH="LEFT" hidden="false"/>
					</Layer>
				</Layers>
			</Frame>

		</Frames>
		<Scripts>
			<OnShow>WindMinimapConfig_OnShow();</OnShow>
		</Scripts>
	</Frame>

</Ui>