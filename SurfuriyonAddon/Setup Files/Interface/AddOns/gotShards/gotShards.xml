<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.blizzard.com/wow/ui/ ..\FrameXML\UI.xsd">
<Script file ="localization.lua"/>
<Script file ="Interface\AddOns\gotShards\ExchangeThings\localization.lua"/>
 <Script file="gotShards.lua"/>
 <Script file="Interface\AddOns\gotShards\ExchangeThings\ExchangeThings.lua"/>

  <Frame name="gotShardsMessageFrame" toplevel="true" frameStrata="BACKGROUND" hidden="true">
        <Size>
            <AbsDimension x="1000" y="140"/>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
         <Layers>
            <Layer level="ARTWORK">
                <FontString name="gotShardsMessageText" inherits="GameFontNormal">
                    <Color r="1.00" g="0.3" b="0.6"/>
                </FontString>
            </Layer>
        </Layers>
 </Frame>

 <Frame name="gotShardsFrame" hidden="false" parent="PlayerFrame" movable="true">
     <Size>
         <AbsDimension x="70" y="42"/>
     </Size>
     <Anchors>
         <Anchor point="TOPLEFT" relativePoint="BOTTOMLEFT">
         <Offset><AbsDimension x="40" y="-20"/></Offset>
         </Anchor>
     </Anchors>

     <Layers>
         <Layer level="BACKGROUND">
             <Texture file="Interface\AuctionFrame\UI-AuctionItemNameFrame">
             </Texture>
         </Layer>
         <Layer level="ARTWORK">
             <FontString name="gotShardsText" inherits="GameFontNormal" wraponspaces="true">
                 <Size>
                     <AbsDimension x="18" y="12"/>
                 </Size>
                 <Anchors>
                     <Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="20" y="-5"/>
						</Offset>
					 </Anchor>
                 </Anchors>
             </FontString>
             <FontString name="gotShardsTextSoulTime" inherits="GameFontNormal" wraponspaces="true">
                 <Size>
                     <AbsDimension x="34" y="12"/>
                 </Size>
                 <Anchors>
                     <Anchor point="TOPLEFT">
						<Offset>
							<AbsDimension x="19" y="-23"/>
						</Offset>
					 </Anchor>
                 </Anchors>
             </FontString>
		 </Layer>
	 </Layers>

	 <Frames>
		<Button>
			<Size>
				<AbsDimension x="16" y="16"/>
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
					<Offset>
						<AbsDimension x="4" y="-4"/>
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>
					gotShards_ActivateShard();
				</OnClick>
			</Scripts>
 		 	<NormalTexture name="gotShardsAShard" file="Interface\Icons\INV_Misc_Gem_Amethyst_02.blp"/>
		</Button>

		<Button>
			<Size>
				<AbsDimension x="16" y="16"/>
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
					<Offset>
						<AbsDimension x="4" y="-22"/>
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>
					gotShards_ActivateSoulStone();
				</OnClick>
			</Scripts>
 		 	<NormalTexture  name="gotShardsASoul" file="Interface\Icons\Spell_Shadow_SoulGem.blp"/>
		</Button>

		<Button>
			<Size>
				<AbsDimension x="16" y="16"/>
			</Size>
			<Anchors>
				<Anchor point="TOPLEFT" relativeTo="$parent" relativePoint="TOPLEFT">
					<Offset>
						<AbsDimension x="40" y="-4"/>
					</Offset>
				</Anchor>
			</Anchors>
			<Scripts>
				<OnClick>
					gotShards_ActivateHealStone();
				</OnClick>
			</Scripts>
 		 	<NormalTexture name="gotShardsAHeal" file="Interface\Icons\INV_Stone_04.blp"/>
		</Button>

	 </Frames>
     <Scripts>
         <OnLoad>
			 this:RegisterForDrag("LeftButton", "RightButton");
             gotShards_OnLoad();
			 ExchangeThings_OnLoad();
         </OnLoad>
         <OnEvent>
             gotShards_OnEvent(arg1, arg2);
			 ExchangeThings_OnEvent(arg1, arg2);
         </OnEvent>
		 <OnUpdate>
			gotShards_SoulCooldown(arg1);
		 </OnUpdate>
		 <OnDragStart>
			if (IsShiftKeyDown())
			then
				this:StartMoving();
			end;
		 </OnDragStart>
		 <OnDragStop>
			this:StopMovingOrSizing();
		 </OnDragStop>
     </Scripts>
 </Frame>	
</Ui>
